<div class="todolist">
    <p>Fill your ToDoList soon!!!</p>
    {{log @model}}

    <ol>
        {{#each @model as |item|}}
        {{#if item.id}}
        <li>{{item.todo}}</li>
        <button id="deletButton" onclick={{fn this.delete @model item}} type="button">Delete</button>
        {{/if}}
        {{/each}}
    </ol>

    <form onsubmit={{fn this.submit @model}}>
        <input placeholder="Add todo" type="text" value={{this.text.todo}}
        onchange={{fn this.onChange}} />
        <button type="submit">Add</button>
    </form>
</div>